<% console.log(locals.data.result) %>
<div class="container justify-content-between">
    <h1>All Products</h1>
    <a href="/new" class="btn btn-lg btn-primary">Add New</a>
</div>
<div class="table-responsive container">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Inventory Count</th>
                <th scope="col">Quantity Sold</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(const row of locals.data.result){ %>
            <tr>
              <td><%= row["id"] %></td>
              <td>
                <a href=<%= `"/show/" + ${row["id"]}` %> >
                  <%= row["name"] %>
                </a>
              </td>
              <td><%= row["inventory_count"] %></td>
              <td><%= row["quantity_sold"] %></td>
              <td>
                <a href=<%= `"/edit/" + ${row["id"]}` %>
                  class="btn btn-sm btn-primary">Edit</a>
                <a class="delete-button btn btn-sm btn-danger" data-url=<%= `"/delete/" + ${row["id"]}` %>
                data-row="<%= row["id"] %>" >Delete</a>
              </td>
              </tr>
                <%}%>
        </tbody>
    </table>
</div>
